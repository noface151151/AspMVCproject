@using Model.EF
@model List<Sach>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminView.cshtml";
}
@{
    AjaxOptions option = new AjaxOptions()
    {
        UpdateTargetId="SearchResult",
        InsertionMode=InsertionMode.Replace,       
    };
}

@section header{
    Danh sách Sản phẩm
}
<input type="button" class="btn btn-outline btn-info" value="Thêm sản phẩm" onclick="location.href='@Url.Action("Themsach","QuanLySach")'" style="margin-bottom:20px" />

    <div class="row">
        <div class="col-lg-20">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-examplex">
                        <thead>
                            <tr>
                                <th width="11%">Mã sách</th>
                                <th width="15%">Tên sách</th>
                                <th width="10%">Chủ đề</th>
                                <th width="15%">Nhà xuất bản</th>
                                <th width="8%">Giá</th>
                                <th width="8%">Ảnh bìa</th>
                                <th width="12%">Lượt xem</th>
                                <th width="12%">Tồn kho</th>
                                <th width="8%"></th>
                            </tr>
                        </thead>
                        <tbody id="SearchResult">
                            
        @foreach (var item in Model)
        {
            <tr class="odd gradeX">
                <td>@item.MaSach</td>
                <td> @item.TenSach </td>
                <td class="center">@item.ChuDe.TenChuDe</td>
                <td class="center">@item.NhaXuatBan.TenNXB</td>
                <td class="center">@String.Format("{0:0,0}", item.GiaBan) VNĐ</td>
                <td><img src="@Url.Content("~/Image/"+item.AnhBia)" alt="@item.AnhBia" width="100" height="100"/></td>
                <td class="center">@item.SoLanXem</td>
                <td class="center">@item.SoLuongTon</td>
                <td>
                    <input type="button" class="btn btn-outline btn-primary" value="Chi tiết" onclick="location.href='@Url.Action("ChitietSach", "QuanLySach", new {@id=item.MaSach })'" />
                    <input type="button" class="btn btn-outline btn-primary" value="Sửa" onclick="location.href='@Url.Action("Suasach", "QuanLySach", new { @masach = item.MaSach })'" />
                   </td>
                </tr>
            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

